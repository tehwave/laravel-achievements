{
    "name": "tehwave/laravel-achievements",
    "description": "Simple, elegant Achievements the Laravel way",
    "keywords": [
        "php",
        "laravel",
        "package",
        "achievements",
        "badges",
        "tehwave"
    ],
    "homepage": "https://github.com/tehwave/laravel-achievements",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter JÃ¸rgensen",
            "email": "peterchrjoergensen@gmail.com",
            "homepage": "https://peterchrjoergensen.dk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/filesystem": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
    },
    "require-dev": {
        "brianium/paratest": "^7.4",
        "laravel/pint": "^1.21",
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^10.5|^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "tehwave\\Achievements\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tehwave\\Achievements\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit",
        "coverage": "@php vendor/bin/phpunit --coverage-html coverage",
        "sniff": "@php vendor/bin/pint --test",
        "lint": "@php vendor/bin/pint",
        "paratest": "@php vendor/bin/paratest"
    },
    "extra": {
        "laravel": {
            "providers": [
                "tehwave\\Achievements\\AchievementsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}